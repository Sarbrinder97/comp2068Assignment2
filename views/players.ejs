<% include partials/header %>

  <div class="row">
    <div class="col-10 col">
      <h1>
        <%= heading%>
      </h1>
    </div>
    <p>
      <form action="/players" method="GET" class="form-inline" style=" margin:10px auto; width: 80%;">
        <div class="form-group">
          <input type="text" name="search" placeholder="player search..." class="form-control">
          <input type="submit" value="Search" class="btn btn-default">
        </div>
      </form>
    </p> 
    
  
<!--   table to show list of  players retrieved from mlab database-->  
  <table class="table table-bordered" style=" margin:100px auto; width: 80%;">
    <thead>
      <tr>
        <th>Name</th>
        <th>Salary per year</th>
        <th>Contract Duration</th>
        <th>age</th>
        <% if (user) { %>
          <th>Edit</th>
        <th>Delete</th>
       <% } %>
        
      </tr>
    </thead>
    <tbody>

      <% for (let i = 0; i < players.length; i++) { %>

        <tr>
            
          <td>
            <%= players[i].name %>
          </td>
          <td>
            <%= players[i].salary %>
          </td>
          <td>
            <%= players[i].contractDuration %>
          </td>
          <td>
            <%= players[i].age %>
          </td>
          <% if (user) { %>
            <td>
          
            <a href="/players/edit/<%= players[i]._id %>" class="btn btn-info btn-sm">
              <span class="glyphicon glyphicon-pencil"></span>  
            </a>
            
          </td>
          <td>
              <a href="/players/delete/<%= players[i]._id %>" class="btn btn-info btn-sm" onclick="return confirm('Are you sure you want to delete this?');">
                  <span class="glyphicon glyphicon-remove-circle"></span> Delete
                </a>
         </td>
         <% } %>
          
        </tr>

        <% } %>
    </tbody>
  </table>
  <% include partials/footer %>