<% include partials/header %>

  <div class="row">
    <div class="col-10 col">
      <h1>
        <%= heading%>
      </h1>
    </div>
    

  
<!--   table to show list of  players retrieved from mlab database-->  
  <table class="table table-bordered" style="padding:100px; margin:100px auto; width: 80%;">
    <thead>
      <tr>
        <th>Name</th>
        <th>Salary per year</th>
        <th>Contract Duration</th>
        <th>age</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>

      <% for (let i = 0; i < players.length; i++) { %>

        <tr>
            
          <td>
            <%= players[i].name %>
          </td>
          <td>
            <%= players[i].salary %>
          </td>
          <td>
            <%= players[i].contractDuration %>
          </td>
          <td>
            <%= players[i].age %>
          </td>
          <td>
            <a href="/players/edit/<%= players[i]._id %>" class="btn btn-info btn-sm">
              <span class="glyphicon glyphicon-pencil"></span>  
            </a>
            <!-- <button type="button" class="btn btn-default btn-sm" >
          <span class="glyphicon glyphicon-pencil"> <a href="/admin/edit/<%= players[i]._id %>" class="paper-btn btn-small">Edit</a> </span> 
        </button> -->
          </td>
          <td>
              <a href="/players/delete/<%= players[i]._id %>" class="btn btn-info btn-sm" onclick="return confirm('Are you sure you want to delete this?');">
                  <span class="glyphicon glyphicon-remove-circle"></span> Delete
                </a>
        <!--     <a href="/admin/delete/<%= players[i]._id %>" class="btn btn-info btn-sm" onclick="return confirm('Are you sure you want to delete this?');"><span class="glyphicon glyphicon-trash"></span></a>
         -->  </td>
        </tr>

        <% } %>
    </tbody>
  </table>
  <% include partials/footer %>