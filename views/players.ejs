<% include partials/header %>

  <div class="row">
    <div class="col-10 col">
      <h1>
        <%= heading%>
      </h1>
    </div>
    

  
<!--   table to show list of  players retrieved from mlab database-->  
  <table class="table table-bordered" >
    <thead>
      <tr>
        <th>Name</th>
        <th>Salary per year</th>
        <th>Contract Duration</th>
        <th>age</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>

      <% for (let i = 0; i < players.length; i++) { %>

        <tr>
            
          <td>
            <%= players[i].name %>
          </td>
          <td>
            <%= players[i].salary %>
          </td>
          <td>
            <%= players[i].contractDuration %>
          </td>
          <td>
            <%= players[i].age %>
          </td>
          <td>
            <a href="/admin/edit/<%= players[i]._id %>" class="paper-btn btn-small">Edit</a>
          </td>
          <td>
            <a href="/admin/delete/<%= players[i]._id %>" class="paper-btn btn-small" onclick="return confirm('Are you sure you want to delete this?');">Delete</a>
          </td>
        </tr>

        <% } %>
    </tbody>
  </table>
  <% include partials/footer %>