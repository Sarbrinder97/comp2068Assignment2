<!-- including header in index page -->
<% include partials/header %>
    <h1>
        <%= heading %>
    </h1>
    

    
    <div class="row flex-center" style=" margin:100px auto;">
            <div class="sm-4 col">
              <div class="card" style="width: 20rem;">
                <div class="card-body">
                  <form method="POST" action="/add">
        <div class="form-group">
    
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
        </div>
        <div class="form-group">
    
    
            <label for="salary">Salary:</label>
            <input type="text" id="salary" class="form-control" placeholder="salary" name="salary">
    
    
        </div>
        <div class="form-group">

            <label for="contractDuration">Contract Duration:</label>
            <input type="text" id="contractDuration" class="form-control" name="contractDuration">
    
    
        </div>
        <div class="form-group">
    
            <label for="age">Age:</label>
            <input type="number" id="age" class="form-control" name="age">
        </div>
    
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
                </div>
                
              </div>
            </div>
          </div>
    <!-- including footer in index page -->
    <% include partials/footer %>